{% extends "base.html.twig" %}
{% block body %}
{{ form_start(form) }}
    {% for reader in form.readers %}
        Reader {{ loop.index }}

<div class="row">
    <div class="input-field col l1 s12">
        {{- form_widget(reader.ip) -}}
        {{- form_label(reader.ip) -}}
        {{- form_errors(reader.ip) -}}
    </div>

    <div class="input-field col l1 s6">
        <input readonly id="read{{ loop.index }}" type="text" value="0">
    </div>
    <div class="input-field col l1 s6">
        <input readonly id="lastread{{ loop.index }}" type="text" value="00:00:00">
    </div>
    <div class="input-field col l5 s12">
        {{- form_widget(reader.timingPoint) -}}
        {{- form_label(reader.timingPoint) -}}
        {{- form_errors(reader.timingPoint) -}}
    </div>

    <div class="input-field col l4 s12">
        <div class="switch">
            <label>
                Off
                {{- form_widget(reader.status) -}}
                <span class="lever"></span>
                On
            </label>
        </div>
        {{- form_errors(reader.status) -}}
    </div>
</div>
    {% endfor %}
{{ form_end(form) }}
{% endblock %}

{% block title %}

{% endblock %}

